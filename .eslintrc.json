{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "never",
            {
              "jsx": "always"
            }
          ],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx", ".ts"] }],
        "react/jsx-props-no-spreading": "off",
        "no-shadow": "off"
    }
}
